{
  "compilerOptions": {
    "target": "es2020",   
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
